@-moz-document domain("chatgpt.com") {
.flex.w-full.flex-col.transition-colors.contain-inline-size.gap-1\.5.rounded-\[26px\].p-1\.5 {
    background-color: rgba(0, 0, 0, 0);
    border: 1px solid #535353;
    border-radius: 10px;
}

.rounded-full {
    border-radius: 8px;
    
}

.grow.overflow-hidden.text-ellipsis.whitespace-nowrap.text-sm.text-token-text-primary {
    visibility: hidden;
}

.grow.overflow-hidden.text-ellipsis.whitespace-nowrap.text-sm.text-token-text-primary::after {
    content: "New Chat";
    visibility: visible;
    margin-left: -52px;
}

.invisible {
    visibility: visible;
}

.dark\:bg-token-main-surface-secondary:is(.dark *) {
    background-color: rgba(62, 62, 62, .18);
    border-radius: 10px;
    border: 1px solid #535353;
}

.h-8 button {
    margin-right: -200px;
    visibility: hidden
}
}
